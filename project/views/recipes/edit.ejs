<!DOCTYPE html>
<html lang="en">
<%- include ../partials/boilerplate.ejs %>


<% include ../partials/navbar.ejs %>

  <h1>Edit a Recipe</h1>

<form action="<%= `/recipes/${recipes.id}?_method=PUT` %>" method="POST">

  <label for="recipe">Recipe Name</label>
  <input id="recipe" type="text" name="recipe" value="<%=recipes.recipe %>"/>

  <br />


  <label for="category">Category</label>
  <input id="category" type="text" name="category" value="<%=recipes.category %>"/>

  <br />

  <label for="area">Area</label>
  <input id="area" type="text" name="area" value="<%=recipes.area %>"/>

  <br />

  <label for="instructions">Instructions</label>
  <input id="instructions" type="text" name="instructions" value="<%=recipes.instructions %>"/>

  <br />

  <label for="ingredients">Ingredients</label>
  <input id="ingredients" type="text" name="ingredients" value="<%=recipes.ingredients %>"/>

  <br />

  <label for="measurement">Measurement</label>
  <input id="measurement" type="text" name="measurement" value="<%=recipes.measurement %>"/>

  <br />


  <label for="img">Image file</label>
  <input id="img" type="text" name="img" value="<%=recipes.img %>"/>

  <br />


  <label for="tag">Tags</label>
  <input id="tag" type="text" name="tag" value="<%=recipes.tag %>"/>

  <br />



  <input type="submit" value="Save changes" />
</form>

<a href="<%= `/recipes/${recipes.id}` %>">Cancel</a>
